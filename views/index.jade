doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/stylesheets/landing.css')
    title= title
  body
    .container
      img(src="/images/wordle-icon.png")
      h1 SHWORDLE
      p#date= date
      .play-button
        a(href="/play")
          button Daily Word
      .random-button 
        a(href="/random")
          button Random Word
      if user
          .user-container
            p Logged in as 
              span #{user.username}
            form(action='/user/logout', method='POST')
              button(type='submit') Logout
      else
          .auth-buttons
              a(href="/user/login")
                  button(type='button') Log In
              a(href="/user/signup")
                  button(type='button') Sign Up
